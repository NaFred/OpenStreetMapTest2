<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personallayout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#000071"
    android:foregroundTint="#000000"
    android:orientation="vertical">


    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS on"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/popuptext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Please Enter Your Phone Number:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/smsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="Phone"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHint="#00A2A0A0" />


    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email on"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Mail Address:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="NaFred.eit@web.de"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/popuptext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Please Enter The Massage Text:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/smsMessageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="Phone"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:text="Your Ship Is Out Of Range!"
        android:textColor="#000000"
        android:textColorHint="#00A2A0A0" />

    <Button
        android:id="@+id/okButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/ok" />

</LinearLayout>