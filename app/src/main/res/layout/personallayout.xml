<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personallayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#000071"
    android:foregroundTint="#000000"
    android:orientation="vertical">>

    <TextView
        android:id="@+id/popuptext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Please Enter Your Phone Number:" />

    <EditText
        android:id="@+id/smsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="Phone"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHint="#00A2A0A0" />

    <TextView
        android:id="@+id/popuptext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Please Enter The Massage Text:"
        android:layout_gravity="center" />


    <EditText
        android:id="@+id/smsMessageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="Phone"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#00A2A0A0"
        android:text="Your Ship Is Out Of Range!"/>

    <Button
        android:id="@+id/okButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/ok" />

</LinearLayout>