<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#000071"
    android:foregroundTint="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/about2layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#000071"
        android:foregroundTint="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@mipmap/anchor"
            android:tint="#FFFEFE" />

        <TextView
            android:id="@+id/popuptext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome to AnchorWatch!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@mipmap/anchor"
            android:tint="#FFFEFE" />
    </LinearLayout>

    <TextView
        android:id="@+id/popuptext5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="With this app You can check weather Your Boat/Ship is out off a cirtain radius. The app displays a warning window and sends SMS and/or email to the user."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/popuptext52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="On very first startup, you have to enter Your phone number/email address and press 'OK'. This can be edited in the menu with the item 'Personal Info'. In the menu you can also clear all positions and reset the map. Your private data is handled with care and not given to third parties."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@mipmap/anchor"
        android:tint="#FFFEFE" />

    <TextView
        android:id="@+id/popuptext6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="AnchorWatch\nRev.1.1.2   SDK 24\nNatalie Reth\nFrederik Marek"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />
    <Button
        android:id="@+id/okButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/ok" />

</LinearLayout>